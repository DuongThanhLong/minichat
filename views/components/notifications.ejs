<div class="notifications fixed top-0 right-0 left-0">
  <div class="p-4 flex flex-col items-end space-y-4">
    <% for(let i = 0; i< errors.length; i++) { %>
    <div class="notify md:w-52 w-full p-2 rounded-md shadow-md bg-red-400 flex items-center transition-all cursor-pointer">
      <button class="closeNotifyButton mr-2">
        <svg class="w-5 h-5 font-medium text-white text-sm" xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" viewBox="0 0 16 16">
          <path d="M4.646 4.646a.5.5 0 0 1 .708 0L8 7.293l2.646-2.647a.5.5 0 0 1 .708.708L8.707 8l2.647 2.646a.5.5 0 0 1-.708.708L8 8.707l-2.646 2.647a.5.5 0 0 1-.708-.708L7.293 8 4.646 5.354a.5.5 0 0 1 0-.708z" />
        </svg>
      </button>
      <p class="font-medium text-white flex-1 text-base"><%= errors[i].msg %> </p>
    </div>
    <% } %>
  </div>
</div>